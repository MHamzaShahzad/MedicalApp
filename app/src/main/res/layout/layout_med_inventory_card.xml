<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_animation">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStoredMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Medicine Name"
                    android:textColor="@color/WHITE"
                    android:drawableLeft="@drawable/ic_medicine_24dp"/>

                <TextView
                    android:id="@+id/medNamePlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Name"
                    android:textColor="@color/WHITE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Remaining Stock"
                    android:textColor="@color/WHITE"
                    android:drawableLeft="@drawable/ic_storage_black_24dp"/>

                <TextView
                    android:id="@+id/medRemainingStockPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Medicine Expired At"
                    android:textColor="@color/WHITE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Remaining Stock"
                    android:drawableLeft="@drawable/ic_storage_black_24dp"
                    android:textColor="@color/WHITE"/>

                <TextView
                    android:id="@+id/medDailyTakenPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Daily Med Used"
                    android:textColor="@color/WHITE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Added At"
                    android:drawableLeft="@drawable/ic_expiry_date_black_24dp"
                    android:textColor="@color/WHITE"/>

                <TextView
                    android:id="@+id/medAddedAtPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Medicine Added At"

                    android:textColor="@color/WHITE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Expired At"
                    android:drawableLeft="@drawable/ic_expiry_date_black_24dp"
                    android:textColor="@color/WHITE"/>

                <TextView
                    android:id="@+id/medExpiredAtPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Medicine Expired At"
                    android:textColor="@color/WHITE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Medicine Description"
                    android:drawableLeft="@drawable/ic_description_black_24dp"
                    android:textColor="@color/WHITE"/>

                <TextView
                    android:id="@+id/medDescriptionPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.6"
                    android:text="Medicine Name"
                    android:textColor="@color/WHITE"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>